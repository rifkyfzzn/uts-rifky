    <script>
        // Kelas Buku
        class Buku {
            constructor(judul, pengarang, isbn) {
                this.judul = judul;
                this.pengarang = pengarang;
                this.isbn = isbn;
            }
        }

        // Kelas Anggota
        class Anggota {
            constructor(nama, idAnggota, tanggalDaftar) {
                this.nama = nama;
                this.idAnggota = idAnggota;
                this.tanggalDaftar = tanggalDaftar;
            }
        }

        // Kelas Peminjaman
        class Peminjaman {
            constructor(anggota, buku, tanggalPinjam, tanggalKembali) {
                this.anggota = anggota;
                this.buku = buku;
                this.tanggalPinjam = tanggalPinjam;
                this.tanggalKembali = tanggalKembali;
            }
        }

        // Array untuk menyimpan data
        let daftarBuku = [];
        let daftarAnggota = [];
        let daftarPeminjaman = [];

        // DOM Elements
        const judulInput = document.getElementById('judul');
        const pengarangInput = document.getElementById('pengarang');
        const isbnInput = document.getElementById('isbn');
        const tambahBukuBtn = document.getElementById('tambahBuku');
        
        const namaAnggotaInput = document.getElementById('namaAnggota');
        const idAnggotaInput = document.getElementById('idAnggota');
        const tanggalDaftarInput = document.getElementById('tanggalDaftar');
        const tambahAnggotaBtn = document.getElementById('tambahAnggota');
        
        const pilihAnggotaSelect = document.getElementById('pilihAnggota');
        const pilihBukuSelect = document.getElementById('pilihBuku');
        const tanggalPinjamInput = document.getElementById('tanggalPinjam');
        const tanggalKembaliInput = document.getElementById('tanggalKembali');
        const tambahPeminjamanBtn = document.getElementById('tambahPeminjaman');
        
        const daftarBukuTbody = document.getElementById('daftarBuku');
        const daftarAnggotaTbody = document.getElementById('daftarAnggota');
        const daftarPeminjamanTbody = document.getElementById('daftarPeminjaman');

        // Event Listeners
        tambahBukuBtn.addEventListener('click', tambahBuku);
        tambahAnggotaBtn.addEventListener('click', tambahAnggota);
        tambahPeminjamanBtn.addEventListener('click', tambahPeminjaman);

        // Fungsi untuk menambah buku
        function tambahBuku() {
            const judul = judulInput.value.trim();
            const pengarang = pengarangInput.value.trim();
            const isbn = isbnInput.value.trim();
            
            if (judul === '' || pengarang === '' || isbn === '') {
                alert('Semua field harus diisi!');
                return;
            }
            
            const bukuBaru = new Buku(judul, pengarang, isbn);
            daftarBuku.push(bukuBaru);
            
            // Reset form
            judulInput.value = '';
            pengarangInput.value = '';
            isbnInput.value = '';
            
            // Update tampilan
            tampilkanBuku();
            updateDropdownBuku();
        }

        // Fungsi untuk menambah anggota
        function tambahAnggota() {
            const nama = namaAnggotaInput.value.trim();
            const idAnggota = idAnggotaInput.value.trim();
            const tanggalDaftar = tanggalDaftarInput.value;
            
            if (nama === '' || idAnggota === '' || tanggalDaftar === '') {
                alert('Semua field harus diisi!');
                return;
            }
            
            const anggotaBaru = new Anggota(nama, idAnggota, tanggalDaftar);
            daftarAnggota.push(anggotaBaru);
            
            // Reset form
            namaAnggotaInput.value = '';
            idAnggotaInput.value = '';
            tanggalDaftarInput.value = '';
            
            // Update tampilan
            tampilkanAnggota();
            updateDropdownAnggota();
        }

        // Fungsi untuk menambah peminjaman
        function tambahPeminjaman() {
            const anggotaIndex = pilihAnggotaSelect.value;
            const bukuIndex = pilihBukuSelect.value;
            const tanggalPinjam = tanggalPinjamInput.value;
            const tanggalKembali = tanggalKembaliInput.value;
            
            if (anggotaIndex === '' || bukuIndex === '' || tanggalPinjam === '' || tanggalKembali === '') {
                alert('Semua field harus diisi!');
                return;
            }
            
            const anggota = daftarAnggota[anggotaIndex];
            const buku = daftarBuku[bukuIndex];
            
            const peminjamanBaru = new Peminjaman(anggota, buku, tanggalPinjam, tanggalKembali);
            daftarPeminjaman.push(peminjamanBaru);
            
            // Reset form
            pilihAnggotaSelect.value = '';
            pilihBukuSelect.value = '';
            tanggalPinjamInput.value = '';
            tanggalKembaliInput.value = '';
            
            // Update tampilan
            tampilkanPeminjaman();
        }

        // Fungsi untuk menampilkan daftar buku
        function tampilkanBuku() {
            daftarBukuTbody.innerHTML = '';
            
            daftarBuku.forEach((buku, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${buku.judul}</td>
                    <td>${buku.pengarang}</td>
                    <td>${buku.isbn}</td>
                    <td class="actions">
                        <button class="action-btn btn-danger" onclick="hapusBuku(${index})">Hapus</button>
                    </td>
                `;
                daftarBukuTbody.appendChild(row);
            });
        }

        // Fungsi untuk menampilkan daftar anggota
        function tampilkanAnggota() {
            daftarAnggotaTbody.innerHTML = '';
            
            daftarAnggota.forEach((anggota, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${anggota.nama}</td>
                    <td>${anggota.idAnggota}</td>
                    <td>${formatTanggal(anggota.tanggalDaftar)}</td>
                    <td class="actions">
                        <button class="action-btn btn-danger" onclick="hapusAnggota(${index})">Hapus</button>
                    </td>
                `;
                daftarAnggotaTbody.appendChild(row);
            });
        }

        // Fungsi untuk menampilkan daftar peminjaman
        function tampilkanPeminjaman() {
            daftarPeminjamanTbody.innerHTML = '';
            
            daftarPeminjaman.forEach((peminjaman, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${peminjaman.anggota.nama}</td>
                    <td>${peminjaman.buku.judul}</td>
                    <td>${formatTanggal(peminjaman.tanggalPinjam)}</td>
                    <td>${formatTanggal(peminjaman.tanggalKembali)}</td>
                    <td class="actions">
                        <button class="action-btn btn-danger" onclick="hapusPeminjaman(${index})">Hapus</button>
                    </td>
                `;
                daftarPeminjamanTbody.appendChild(row);
            });
        }

        // Fungsi untuk mengupdate dropdown buku
        function updateDropdownBuku() {
            pilihBukuSelect.innerHTML = '<option value="">-- Pilih Buku --</option>';
            
            daftarBuku.forEach((buku, index) => {
                const option = document.createElement('option');
                option.value = index;
                option.textContent = buku.judul;
                pilihBukuSelect.appendChild(option);
            });
        }

        // Fungsi untuk mengupdate dropdown anggota
        function updateDropdownAnggota() {
            pilihAnggotaSelect.innerHTML = '<option value="">-- Pilih Anggota --</option>';
            
            daftarAnggota.forEach((anggota, index) => {
                const option = document.createElement('option');
                option.value = index;
                option.textContent = anggota.nama;
                pilihAnggotaSelect.appendChild(option);
            });
        }

        // Fungsi untuk menghapus buku
        function hapusBuku(index) {
            if (confirm('Apakah Anda yakin ingin menghapus buku ini?')) {
                daftarBuku.splice(index, 1);
                tampilkanBuku();
                updateDropdownBuku();
            }
        }

        // Fungsi untuk menghapus anggota
        function hapusAnggota(index) {
            if (confirm('Apakah Anda yakin ingin menghapus anggota ini?')) {
                daftarAnggota.splice(index, 1);
                tampilkanAnggota();
                updateDropdownAnggota();
            }
        }

        // Fungsi untuk menghapus peminjaman
        function hapusPeminjaman(index) {
            if (confirm('Apakah Anda yakin ingin menghapus peminjaman ini?')) {
                daftarPeminjaman.splice(index, 1);
                tampilkanPeminjaman();
            }
        }

        // Fungsi untuk memformat tanggal
        function formatTanggal(tanggalString) {
            const options = { year: 'numeric', month: 'long', day: 'numeric' };
            return new Date(tanggalString).toLocaleDateString('id-ID', options);
        }

        // Inisialisasi data contoh
        function inisialisasiDataContoh() {
            // Tambah beberapa buku contoh
            daftarBuku.push(new Buku('Sukses Ternak Muda', 'Rifky Fauzan', '128-1234567890'));
            daftarBuku.push(new Buku('Mengajar dan Bertani', 'Nasher Ahmad Busjori', '128-0987654321'));
            daftarBuku.push(new Buku('Desain Web Modern', 'Ahmad Rizki', '128-1122334455'));
            
            // Tambah beberapa anggota contoh
            const hariIni = new Date().toISOString().split('T')[0];
            daftarAnggota.push(new Anggota('Naufal Wirasana', 'A001', hariIni));
            daftarAnggota.push(new Anggota('Muhammad Riski', 'A002', hariIni));
            daftarAnggota.push(new Anggota('Muhammad Baba', 'A003', hariIni));
            
            // Update tampilan
            tampilkanBuku();
            tampilkanAnggota();
            updateDropdownBuku();
            updateDropdownAnggota();
        }

        // Panggil fungsi inisialisasi saat halaman dimuat
        document.addEventListener('DOMContentLoaded', inisialisasiDataContoh);
    </script>
</body>
</html>