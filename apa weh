<body>
    <div class="container">
        <header>
            <h1>Sistem Manajemen Perpustakaan</h1>
            <p class="subtitle">Kelola buku, anggota, dan peminjaman dengan mudah</p>
        </header>
        
        <div class="card-container">
            <!-- Form Buku -->
            <div class="card">
                <h2>Kelola Buku</h2>
                <div class="form-group">
                    <label for="judul">Judul Buku</label>
                    <input type="text" id="judul" placeholder="Masukkan judul buku">
                </div>
                <div class="form-group">
                    <label for="pengarang">Pengarang</label>
                    <input type="text" id="pengarang" placeholder="Masukkan nama pengarang">
                </div>
                <div class="form-group">
                    <label for="isbn">ISBN</label>
                    <input type="text" id="isbn" placeholder="Masukkan ISBN">
                </div>
                <button id="tambahBuku">Tambah Buku</button>
            </div>
            
            <!-- Form Anggota -->
            <div class="card">
                <h2>Kelola Anggota</h2>
                <div class="form-group">
                    <label for="namaAnggota">Nama Anggota</label>
                    <input type="text" id="namaAnggota" placeholder="Masukkan nama anggota">
                </div>
                <div class="form-group">
                    <label for="idAnggota">ID Anggota</label>
                    <input type="text" id="idAnggota" placeholder="Masukkan ID anggota">
                </div>
                <div class="form-group">
                    <label for="tanggalDaftar">Tanggal Pendaftaran</label>
                    <input type="date" id="tanggalDaftar">
                </div>
                <button id="tambahAnggota">Tambah Anggota</button>
            </div>
            
            <!-- Form Peminjaman -->
            <div class="card">
                <h2>Kelola Peminjaman</h2>
                <div class="form-group">
                    <label for="pilihAnggota">Pilih Anggota</label>
                    <select id="pilihAnggota">
                        <option value="">-- Pilih Anggota --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="pilihBuku">Pilih Buku</label>
                    <select id="pilihBuku">
                        <option value="">-- Pilih Buku --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="tanggalPinjam">Tanggal Pinjam</label>
                    <input type="date" id="tanggalPinjam">
                </div>
                <div class="form-group">
                    <label for="tanggalKembali">Tanggal Kembali</label>
                    <input type="date" id="tanggalKembali">
                </div>
                <button id="tambahPeminjaman">Tambah Peminjaman</button>
            </div>
        </div>
        
        <!-- Daftar Buku -->
        <div class="list-container">
            <h2>Daftar Buku</h2>
            <table id="tabelBuku">
                <thead>
                    <tr>
                        <th>Judul</th>
                        <th>Pengarang</th>
                        <th>ISBN</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody id="daftarBuku">
                    <!-- Data buku akan ditampilkan di sini -->
                </tbody>
            </table>
        </div>
        
        <!-- Daftar Anggota -->
        <div class="list-container">
            <h2>Daftar Anggota</h2>
            <table id="tabelAnggota">
                <thead>
                    <tr>
                        <th>Nama</th>
                        <th>ID Anggota</th>
                        <th>Tanggal Daftar</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody id="daftarAnggota">
                    <!-- Data anggota akan ditampilkan di sini -->
                </tbody>
            </table>
        </div>
        
        <!-- Daftar Peminjaman -->
        <div class="list-container">
            <h2>Daftar Peminjaman</h2>
            <table id="tabelPeminjaman">
                <thead>
                    <tr>
                        <th>Anggota</th>
                        <th>Buku</th>
                        <th>Tanggal Pinjam</th>
                        <th>Tanggal Kembali</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody id="daftarPeminjaman">
                    <!-- Data peminjaman akan ditampilkan di sini -->
                </tbody>
            </table>
